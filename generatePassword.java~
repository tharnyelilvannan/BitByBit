import java.util.*;

/** 
 * Author: Tharny Elilvannan
 * Last Updated: November 10, 2024
 * Purpose: Generate a strong password.
 */

public class generatePassword {

    public static void main(String[] args) {
        
        PasswordGenerator p = new PasswordGenerator();
        System.out.println(p.generateStrongPassword());

    } // end of main method

} // end of Main class

class PasswordGenerator {

    private newPassword;

    private String generateStrongPassword() {

        String password = "";
        Random random = new Random();
        int nextItem = random.nextInt(5);
        int i;
        int nextInt = 0;
        char nextChar = "";

        for (i = 0; i < 15; i++) {

            if (nextItem == 0) { // number
                nextInt = random.nextInt(10);
                password = password + nextInt;

                nextItem = random.nextInt(5);
            }
            else if (nextItem == 1) { // character
                nextChar = random.nextChar(26);
            }

        } // end of for loop

        System.out.println(password);
        return password;
    } // end of generateStrongPassword class

 } // end of PasswordGenerator class